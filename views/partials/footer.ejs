<div class="ui modal createItem">
    <div class="loginFormContainer">
      <form class="loginForm" action="/<%= user._id %>" enctype="multipart/form-data" method="POST">
        <h4>Add to Gallery</h4>
        <input type="file" id="image" name="image" accept="image/*">
        <input type="submit" value="Add">
      </form>
    </div>
  </div>
<div class="ui modal aboutModal">
    <div class="loginFormContainer">
      <form class="loginForm" action="/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <h4>Edit About Me</h4>
        <input type="file" id="image" name="image" accept="image/*">
        <textarea name="about" placeholder="Edit About Me" maxlength="500" minlength="4"><%= user.about %> </textarea>
        <input type="submit" value="submit">
      </form>
    </div>
  </div>
<div class="ui modal passwordReset">
    <div class="loginFormContainer">
      <form class="loginForm" action="/auth/passwordReset/:id" method="POST">
        <h4>Reset your password</h4>
        <input type="text" placeholder="Your login email" required>
        <input type="submit" value="Send">
      </form>
    </div>
  </div>
