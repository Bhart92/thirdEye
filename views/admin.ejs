<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Third Eye Glass Art</title>
  <!-- FAVICON SECTION -->
  <link rel="apple-touch-icon" sizes="180x180" href="./img/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="36x36" href="./img/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="20x20" href="./img/favicon/favicon-16x16.png">
  <link rel="manifest" href="./img/favicon/site.webmanifest">
  <link rel="mask-icon" href="./img/favicon/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
  <!--END FAVICON -->
  <link href="https://fonts.googleapis.com/css?family=Forum|Lato:400,700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" type="text/css" rel="stylesheet" />
  <link href="css/lightbox.css" rel="stylesheet">
  <link href="css/reset.css" rel="stylesheet" type="text/css" />
  <link href="css/dropdown.css" rel="stylesheet" type="text/css" />
  <link href="css/dimmer.css" rel="stylesheet" type="text/css" />
  <link href="css/hamburger.css" rel="stylesheet">
  <link href="css/index.min.css" rel="stylesheet" type="text/css" />
</head>
  <body>
    <div id="mobileNav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/#aboutSection">About</a></li>
        <li><a href="/#gallerySection">Gallery</a></li>
        <li><a href="/#contactSection">Contact</a></li>
      </ul>
    </div>
    <nav>
      <div id="logoContainer">
        <a href="/"><img src='../img/navLogo.png' alt="Third Eye Glass" id="navLogo"/></a>
      </div>
      <% if(currentUser && currentUser.isAdmin){ %>
      <div class="adminControlContainer">
        <div class="ui compact menu">
          <div class="ui simple dropdown item">
            Logged In
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item logout">Log Out</div>
            </div>
          </div>
        </div>
        <div class="ui compact menu">
          <div class="ui simple dropdown item">
            Admin Controls
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item addNew">Add to Gallery</div>
              <div class="item editAbout">Edit About</div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/#aboutSection">About</a></li>
        <li><a href="/#gallerySection"><span>Gallery</span></a></li>
        <li><a href="/#contactSection">Contact</a></li>
      </ul>
      <button class="hamburger hamburger--squeeze" type="button">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
      </button>
    </nav>
    <section id="adminSection">
      <h1>Edit Gallery</h1>
      <div class="sectionContainerGallery">
        <% galleryItems.forEach(function(galleryItem){ %>
          <div class="galleryImgContainer">
          <img src="<%= galleryItem.image %>" />
            <div class="innerGalleryContainerRight">
              <form class="deleteForm" action="/<%= galleryItem._id %>?_method=DELETE" method="POST">
                <button name="button" class='deleteBtn'>Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
    <section id="adminAboutSection">
      <h1>About Section</h1>
      <div class="sectionContainer">
        <div class="imageContainer">
          <img src="<%= user.image %>" alt="Third Eye Glass" />
      </div>
        <div id="aboutTextContainer">
          <%= user.about %>
        </div>
      </div>
    </section>
    <div class="ui modal createItem">
        <div class="loginFormContainer">
          <form class="loginForm" action="/<%= user._id %>" enctype="multipart/form-data" method="POST">
            <h4>Add to Gallery</h4>
            <input type="file" id="image" name="image" accept="image/*">
            <input type="submit" value="Add">
          </form>
        </div>
      </div>
    <div class="ui modal aboutModal">
        <div class="loginFormContainer">
          <form class="loginForm" action="/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <h4>Edit About Me</h4>
            <input type="file" id="image" name="image" accept="image/*">
            <textarea name="about" placeholder="Edit About Me" maxlength="500" minlength="4"><%= user.about %> </textarea>
            <input type="submit" value="submit">
          </form>
        </div>
      </div>
      <% if(error && error.length > 0){ %>
        <div class="ui negative message">
          <div class="header">
            <p>
              <%= error %>

            </p>
          </div>
        </div>
      <% } %>
      <% if(success && success.length > 0) { %>
      <div class="ui positive message centered">
        <div class="header">
          <p>
            <%= success %>
          </p>
        </div>
      </div>
      <% } %>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js" type="text/javascript"></script>
      <script src="/js/lightbox.js"></script>
      <script src="./js/cycle2.js" type="text/javascript"></script>
      <script src="./js/semantic.min.js" type="text/javascript"></script>
      <script src="./js/index.js" type="text/javascript"></script>
</body>
</html>


<div class="sectionContainerGallery">
  <% galleryItems.forEach(function(galleryItem){ %>
    <div class="galleryImgContainer">
      <div class="innerGalleryContainerLeft">
        <i class="far fa-eye"></i>
      </div>
    </div>
  <% }) %>
</div>
